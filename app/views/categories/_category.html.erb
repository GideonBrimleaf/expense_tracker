<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <% if category.description.present? %>
    <p>
      <strong>Description:</strong>
      <%= category.description %>
    </p>
  <% end %>

  <p>
    <strong>Expenses count:</strong>
    <%= category.expenses.count %>
  </p>

</div>